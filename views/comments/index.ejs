<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 style="text-align: center">Comment Page: <%= campground.name %></h1>
            <!-- <a href="/campgrounds/<%= campground._id %>">Go back to the campground page</a> -->
            <div class="thumbnail">
                <div class="caption-full">
                    <% if (campground.comments.length === 0) { %>
                    <h5>
                        <em>No comments yet.</em>
                    </h5>
                    <% } else { %>
                    <p>
                        <em>(total comments: <%= campground.comments.length %>)</em>
                    </p>
                    <p><h4>All comments for this campground:</h4></p>
                    <hr style="margin-top: 0;">
                    <% campground.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-3">
                            <div>Comment by: <strong><%= comment.author.username %></strong></div>
                            <span><em><%= moment(comment.createdAt).fromNow() %></em></span>
                        </div>
                        <div class="col-md-9">
                            <p style="text-align: justify; word-wrap: break-word;">
                                <%= comment.text %>
                            </p>
                            <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                            <a class="btn btn-sm btn-warning"
                               href="/campgrounds/<%=campground._id %>/comments/<%=comment._id %>/edit">Edit</a>
                            <form class="delete-form" action="/campgrounds/<%=campground._id %>/comments/<%=comment._id %>?_method=DELETE" method="POST">
                                <input type="submit" class="btn btn-sm btn-danger" value="Delete">
                            </form>
                            <% } %>
                        </div>
                    </div>
                    <hr>
                    <% }); %>
                    <% } %>
                    <div>
                        <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>/comments/new">
                            Write a New Comment</a>
                    </div>
                    <div style="margin-top: 10px;">
                        <a class="btn btn-default" href="/campgrounds/<%= campground._id %>"><i class="fa fa-arrow-left"></i> Go back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--Review section-->
</div>

<% include ../partials/footer %>

<%- include("../partials/header") -%>

	<div class="container" style="margin-top: 30px;font-family: 'Quicksand', sans-serif;">
		<div class="row">
			<div class="col col-md-4"></div>
			<div class="col col-md-4">
				<h1>Reset Password!</h1> 
				<form action="/reset/<%= token %>?_method=PUT" method="POST">
					<div class="form-group">
						<label for="password">New Password:</label>
						<input type="password" name="password" class="form-control" id="password" placeholder="new passowrd" autofocus="true">
					</div>
					<div class="form-group">
						<label for="confirm">Confirm Password:</label>
						<input type="password" name="confirm" class="form-control" id="confirm" placeholder="confirm password">
					</div>
					<div class="form-group">
						<input type="submit" class="form-control" value="Update password">
					</div> 
				</form>
			</div>
		</div>
	</div>


<%- include("../partials/footer") -%>
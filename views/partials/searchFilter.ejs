	<fieldset>
		<legend>Price</legend>
		<label for="min">Min:</label>
		<input type="number" name="price[min]" id="min" min="0" max="10000" step="1" placeholder="Min" value="<%= query.price ? query.price.min : '' %>">

		<label for="max">Max:</label>
		<input type="number" name="price[max]" id="max" min="0" max="10000" step="1" placeholder="Max" value="<%= query.price ? query.price.max : '' %>">
	</fieldset>
	<fieldset>
		<legend>Rating</legend>
		<input type="checkbox" id="zero-stars" value="0" name="avgRating[]"

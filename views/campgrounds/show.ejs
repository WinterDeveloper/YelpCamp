<div class="container-fluid">
  <div class="row">
    <div class="col-md-3">
      <!-- <p class="lead">YelpCamp</p> -->
      <!-- <div class="list-group">
        <li class="list-group-item active">Info 1</li>
        <li class="list-group-item">Info 2</li>
        <li class="list-group-item">Info 3</li>
      </div> -->
      <div id="map">
        
      </div>
    </div>
    <div class="col-md-9">
      <div class="card">
        <div class="card-columns">
          <% campground.images.forEach(function(image) { %>
            <div class="card">
              <img class="img-fluid card-img-top" src="<%= image.url %>">
            </div>
          <% }); %>
        </div>
      </div>
      <div class="card">
        <div class="card-body">
          <h4 class="text-right float-right">$<%= campground.price %>/night</h4>
          <h4 class="card-title text-left"><a href="#"><%= campground.name %></a></h4>
          <p class="card-text"><%= campground.description %></p>
          <p class="card-text"><em>submitted by </em><a href="/users/<%= campground.author.id %>"><em><%= campground.author.username %></em></a><em>, <%= moment(campground.createdAt).fromNow() %></em></p>
          <%if((currentUser && campground.author.id.equals(currentUser._id)) || (currentUser && currentUser.isAdmin)){%>
            <a class="btn btn-sm btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
            <form class="delete-form" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="post">
              <button class="btn btn-sm btn-danger" type="submit" name="button">Delete</button>
            </form>
          <%}%>
          <% if(!currentUser) { %>
            <a href="/campgrounds/<%= campground._id %>/like" class="btn btn-sm btn-outline-dark"><i class="far fa-star" style="margin-right: 4px;"></i><%= campground.saves %></a>
          <% } %>
          <%if(currentUser){%>
            <% var foundUserSave = currentUser.saves.some(function (save) { %>
              <% return save._id.equals(campground._id); %>
            <% }); %>
            <% if(!foundUserSave) { %>
              <a href="/campgrounds/<%= campground._id %>/save" class="btn btn-sm btn-outline-dark"><i class="far fa-star" style="margin-right: 4px;"></i><%= campground.saves %></a>
            <% } else { %>
              <a href="/campgrounds/<%= campground._id %>/unsave" class="btn btn-sm btn-outline-dark"><i class="fas fa-star" style="color: #EEBD01; margin-right: 4px;"></i><%= campground.saves %></a>
            <% } %>
          <% } %>

          <!-- LIKING PART -->
          <% if(!currentUser) { %>
            <a href="/campgrounds/<%= campground._id %>/like" class="btn btn-sm btn-outline-dark"><i class="far fa-thumbs-up" style="margin-right: 4px;"></i><%= campground.like %></a>
          <% } else { %>
            <% var foundUserLike = campground.liking_users.some(function(user) { %>
              <% return user._id.equals(currentUser._id); %>
            <% }); %>
            <% if(!foundUserLike) { %>
              <a href="/campgrounds/<%= campground._id %>/like" class="btn btn-sm btn-outline-dark"><i class="far fa-thumbs-up" style="margin-right: 4px;"></i><%= campground.like %></a>
            <% } else { %>
              <a href="/campgrounds/<%= campground._id %>/unlike" class="btn btn-sm btn-outline-dark"><i class="fas fa-thumbs-up" style="color: #EEBD01; margin-right: 4px;"></i><%= campground.like %></a>
            <% } %>
          <% } %>
        </div>

      </div>

      <!--Review section-->
      <div class="card">
        <div class="card-body">
          <div>
          <% if (campground.rating === 0) { %>
            <h5>
              <em>No reviews yet.</em>
            </h5>
          <% } else { %>
                    <p>
                        <%- '<span class="fa fa-star stars"></span>'.repeat(campground.rating) %>
                        <em>(total reviews: <%= campground.reviews.length %>)</em>
                    </p>
                    <p>
                        Current campground rating: <strong><%= campground.rating.toFixed(2) %></strong>
                    </p>
                    <p><h4>Latest reviews for this campground:</h4></p>

                    </div>
                    <hr style="margin-top: 0;">
                    <% campground.reviews.slice(0, 5).forEach(function(review){ %>
                    <div class="row">
                        <div class="col-md-4">
                            <%- '<span class="fa fa-star stars"></span>'.repeat(review.rating) %>
                            <div><img style="width: 15%;margin-right: 5%;clip-path: circle();" src="<%=review.author.avatar%>"  class="customer-img">Review by: <strong><a href="/users/<%= review.author.id %>"><em><%= review.author.username %></em></a></strong></div>
                            <span style="margin-left: 20%;"><em><%= review.updatedAt.toDateString() %></em></span>
                        </div>
                        <div class="col-md-8">
                            <p style="text-align: justify; word-wrap: break-word;">
                                <%= review.text %>
                            </p>
                            <% if(currentUser && review.author.id.equals(currentUser._id)){ %>
                            <a class="btn btn-sm btn-warning"
                               href="/campgrounds/<%=campground._id %>/reviews/<%=review._id %>/edit">Edit</a>
                            <form style="display: inline;" class="delete-form" action="/campgrounds/<%=campground._id %>/reviews/<%=review._id %>?_method=DELETE" method="POST">
                                <input type="submit" class="btn btn-sm btn-danger" value="Delete">
                            </form>
                            <% } %>
                        </div>
                    </div>
                    <hr>
                    <% }); %>
                    <div style="margin-bottom: 10px;">
                        <h4><a href="/campgrounds/<%= campground._id %>/reviews"><i class="fa fa-search" aria-hidden="true"></i> See all reviews</a></h4>
                    </div>
                    <% } %>
                    <div>
                        <a class="btn btn-outline-dark btn-lg<% if (currentUser && campground.reviews.some(function (review) {return review.author.id.equals(currentUser._id)})) { %> disabled <% } %>" href="/campgrounds/<%= campground._id %>/reviews/new">
                            Write a New Review</a>
                    </div>
                </div>
            </div>

      <!-- //COMMENT PART -->
      <div class="card">
        <div class="card-body">
          <p><h4>Latest comments for this campground:</h4><em>(total comments : <%= campground.comments.length %>)</em></p>
          <hr>
          <!-- campground.reviews.slice(0, 5).forEach(function(review) -->
          <% campground.comments.slice(0, 5).forEach(function(comment) {%>
            <div class="row">
              <div class="col-md-12">
                <img style="width: 4.5%;clip-path: circle();margin-right: 1.5%;" src="<%= comment.author.avatar %>" class="customer-img">Comment by : <strong><a href="/users/<%= comment.author.id %>"><%= comment.author.username %></a></strong>
                <span class="float-right"><%= moment(comment.createdAt).fromNow() %></span>
                <p style="margin-left: 6%">
                  <%= comment.text %>
                </p>
                <%if((currentUser && comment.author.id.equals(currentUser._id)) || (currentUser && currentUser.isAdmin)){%>
                <a class="btn btn-sm btn-warning" href="/campgrounds/<%= campground._id %>/comments/<%=comment._id%>/edit" style="margin-left: 6%">Edit</a>
                <form class="delete-form" action="/campgrounds/<%= campground._id %>/comments/<%=comment._id%>?_method=DELETE" method="post">
                  <input type="submit" class="btn btn-sm btn-danger" value="delete">
                </form>
                <%}%>
              </div>
            </div>
            <hr>
          <%})%>
          <div style="margin-bottom: 10px;">
              <h4><a href="/campgrounds/<%= campground._id %>/comments"><i class="fa fa-search" aria-hidden="true"></i> See all comments</a></h4>
          </div>
          <div>
            <a class="btn btn-outline-dark btn-lg" href="/campgrounds/<%= campground._id %>/comments/new" %>/reviews/new">Write a New Comment</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

